{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <div id="show_container" class="d-flex flex-column border-start border-black h-100">
        <div class="d-flex justify-content-center align-items-center" id="logo_contact">
            <img class="p-4" style="height: 200px" src="{{ asset('img/contact.png') }}" alt="Image contact">
        </div>
        <div class="p-5">
            <div class="d-flex justify-content-between align-items-center py-3">
                <div><h1 class="gothicBold">{{ contact.lastname }} {{ contact.firstname }}</h1></div>
                <div class="d-flex">
                    <div><a style="width: 110px;" class="btn border border-dark rounded-pill px-4 mx-2 gothicBold" href="{{ path('app_contact_edit', {'id': contact.id}) }}"><i class="fa-regular fa-pen-to-square me-2"></i>Edit</a></div>
                    {{ include('contact/_delete_form.html.twig') }}
                </div>
            </div>
            <div class="border-top mb-3 border-4"></div>
            <div class="py-3"><i class="fa-regular fa-envelope me-3"></i>{{ contact.mail }}</div>
            <div class="py-3"><i class="fa-solid fa-phone me-3"></i>{{ contact.phone }}</div>
            <div class="py-3 d-flex flex-row align-items-center">{% if (contact.getZipCity() != " " or contact.address)  %}<i class="fa-solid fa-location-dot pe-3"></i><div>{% if contact.address %}{{ contact.address }} </br>{% endif %}{% endif %}{{ contact.getZipCity() }} </div></div>
        </div>
    </div>
{% endblock %}
